<div class="col mb-5">
  <div class="card h-100">
    <!-- Product image-->
    <%= image_tag product.image %>
    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
        <!-- Product name-->
        <h5 class="fw-bolder">
          <%= product.name %>
        </h5>
        <!-- Product price-->
        <%= convert_to_jpy(product.price) %>
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center">
        <%= link_to "編集", edit_admin_product_path(product.id), class: "btn btn-secondary mt-auto" %>
        <%= link_to "削除", edit_admin_product_path(product.id), class: "btn btn-danger mt-auto" %>
      </div>
    </div>
  </div>
</div>
